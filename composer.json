{
    "name": "laralike/laralike-router",
    "description": "simple router like laravel",
    "type": "library",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "guzzlehttp/guzzle": "^6.5",
        "digitalnature/php-ref": "^1.3",
        "filp/whoops": "^2.7",
        "twig/twig": "^2.12",
        "monolog/monolog": "^1.25"
    },
    "autoload": {
        "psr-4": {
            "laralike\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Http\\Controllers\\": "tests/"
        }
    },
    "scripts": {
        "// comment": [
            "usage:",
            "   ex ) composer test",
            "   ex ) composer tag v1.0.0"
        ],
        "test": [
            "c:/php/php71/php ./vendor/phpunit/phpunit/phpunit tests/LaralikeRouterHttpTest.php --debug --colors"
        ],
        "testpf": [
            "c:/php/php71/php ./vendor/phpunit/phpunit/phpunit tests/LaralikeRouterPerformanceTest.php --colors"
        ],
        "testall": [
            "c:/php/php71/php ./vendor/phpunit/phpunit/phpunit --colors"
        ],
        "start": [
            "docker start laralikerouter"
        ],
        "stop": [
            "docker stop laralikerouter"
        ],
        "updtautoload": [
            "composer dump-autoload"
        ],
        "tag": [
            "git tag",
            "git push origin"
        ],
        "deltag": [
            "git tag -d",
            "git push --delete origin"
        ],
        "pushtags": [
            "git push origin --tags"
        ]
    }
}
