{
    "name": "laralike/laralike-router",
    "description": "simple router like laravel",
    "type": "library",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "guzzlehttp/guzzle": "^7.0",
        "digitalnature/php-ref": "^1.3",
        "filp/whoops": "^2.7",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "laralike\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "laralike\\": "src/",
            "App\\Controller\\": "tests/"
        }
    },
    "scripts": {
        "// comment": [
            "usage: ex ) composer test"
        ],
        "test": [
            "php ./vendor/phpunit/phpunit/phpunit --colors"
        ],
        "start": [
            "docker start laralikerouter"
        ],
        "stop": [
            "docker stop laralikerouter"
        ],
        "updtautoload": [
            "composer dump-autoload"
        ],
        "tag": [
            "git tag",
            "git push origin"
        ],
        "pushtags": [
            "git push origin --tags"
        ]
    }
}
